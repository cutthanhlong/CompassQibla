<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_app">

    <include
        android:id="@+id/toolbar"
        layout="@layout/toolbar_app" />

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/toolbar">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:id="@+id/ln_view_alarm"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/_10sdp"
                android:background="@drawable/bg_settings_prayer"
                android:orientation="vertical"
                android:paddingHorizontal="@dimen/_12sdp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginVertical="@dimen/_10sdp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentStart="true"
                        android:layout_centerVertical="true"
                        android:fontFamily="@font/lato_700"
                        android:text="@string/alarm_time"
                        android:textColor="@color/white"
                        android:textSize="@dimen/_12ssp" />

                    <androidx.appcompat.widget.SwitchCompat
                        android:id="@+id/sw_alarm"
                        android:layout_width="wrap_content"
                        android:layout_height="48dp"
                        android:layout_alignParentEnd="true"
                        android:checked="false"
                        android:thumb="@drawable/custom_thumb"
                        app:track="@drawable/custom_track" />
                </RelativeLayout>

                <LinearLayout
                    android:id="@+id/ln_alarm"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:visibility="visible">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_8sdp">

                        <TextView
                            android:id="@+id/tv_time"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerInParent="true"
                            android:fontFamily="@font/lato_400"
                            android:text="05 : 06"
                            android:textColor="@color/white"
                            android:textSize="@dimen/_30ssp"
                            android:textStyle="bold" />

<!--                        <TextView-->
<!--                            android:layout_width="wrap_content"-->
<!--                            android:layout_height="wrap_content"-->
<!--                            android:layout_alignParentEnd="true"-->
<!--                            android:layout_centerVertical="true"-->
<!--                            android:layout_marginEnd="@dimen/_20sdp"-->
<!--                            android:fontFamily="@font/lato_400"-->
<!--                            android:text="AM"-->
<!--                            android:textColor="@color/white"-->
<!--                            android:textSize="@dimen/_12ssp" />-->
                    </RelativeLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginHorizontal="@dimen/_10sdp"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:background="#8793A6" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="@dimen/_10sdp"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:fontFamily="@font/lato_700"
                        android:text="@string/ringtone"
                        android:textColor="@color/white"
                        android:textSize="@dimen/_12ssp" />

                    <RelativeLayout
                        android:id="@+id/slient"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="@dimen/_10sdp"
                        android:layout_marginTop="@dimen/_6sdp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentStart="true"
                            android:layout_centerVertical="true"
                            android:fontFamily="@font/lato_400"
                            android:text="@string/Slient"
                            android:textColor="@color/white"
                            android:textSize="@dimen/_10ssp" />

                        <ImageView
                            android:id="@+id/img_slient"
                            android:layout_width="48dp"
                            android:layout_height="48dp"
                            android:layout_alignParentEnd="true"
                            android:layout_centerVertical="true"
                            android:gravity="center"
                            android:padding="13dp"
                            android:src="@drawable/ic_rb_d" />
                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/vibrate"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="@dimen/_10sdp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentStart="true"
                            android:layout_centerVertical="true"
                            android:fontFamily="@font/lato_400"
                            android:text="@string/Vibrate"
                            android:textColor="@color/white"
                            android:textSize="@dimen/_10ssp" />

                        <ImageView
                            android:id="@+id/img_vibrate"
                            android:layout_width="48dp"
                            android:layout_height="48dp"
                            android:layout_alignParentEnd="true"
                            android:layout_centerVertical="true"
                            android:gravity="center"
                            android:padding="13dp"
                            android:src="@drawable/ic_rb_d" />
                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/beep"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="@dimen/_10sdp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentStart="true"
                            android:layout_centerVertical="true"
                            android:fontFamily="@font/lato_400"
                            android:text="@string/Beep"
                            android:textColor="@color/white"
                            android:textSize="@dimen/_10ssp" />

                        <ImageView
                            android:id="@+id/img_beep"
                            android:layout_width="48dp"
                            android:layout_height="48dp"
                            android:layout_alignParentEnd="true"
                            android:layout_centerVertical="true"
                            android:gravity="center"
                            android:padding="13dp"
                            android:src="@drawable/ic_rb_d" />
                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/azaan1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="@dimen/_10sdp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentStart="true"
                            android:layout_centerVertical="true"
                            android:fontFamily="@font/lato_400"
                            android:text="@string/Azaan1"
                            android:textColor="@color/white"
                            android:textSize="@dimen/_10ssp" />

                        <ImageView
                            android:id="@+id/img_azaan1"
                            android:layout_width="48dp"
                            android:layout_height="48dp"
                            android:layout_alignParentEnd="true"
                            android:layout_centerVertical="true"
                            android:gravity="center"
                            android:padding="13dp"
                            android:src="@drawable/ic_rb_d" />
                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/azaan2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="@dimen/_10sdp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentStart="true"
                            android:layout_centerVertical="true"
                            android:fontFamily="@font/lato_400"
                            android:text="@string/Azaan2"
                            android:textColor="@color/white"
                            android:textSize="@dimen/_10ssp" />

                        <ImageView
                            android:id="@+id/img_azaan2"
                            android:layout_width="48dp"
                            android:layout_height="48dp"
                            android:layout_alignParentEnd="true"
                            android:layout_centerVertical="true"
                            android:gravity="center"
                            android:padding="13dp"
                            android:src="@drawable/ic_rb_d" />
                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/azaan3"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="@dimen/_10sdp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentStart="true"
                            android:layout_centerVertical="true"
                            android:fontFamily="@font/lato_400"
                            android:text="@string/Azaan3"
                            android:textColor="@color/white"
                            android:textSize="@dimen/_10ssp" />

                        <ImageView
                            android:id="@+id/img_azaan3"
                            android:layout_width="48dp"
                            android:layout_height="48dp"
                            android:layout_alignParentEnd="true"
                            android:layout_centerVertical="true"
                            android:gravity="center"
                            android:padding="13dp"
                            android:src="@drawable/ic_rb_d" />
                    </RelativeLayout>
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/_10sdp"
                android:layout_marginTop="@dimen/_15sdp"
                android:background="@drawable/bg_settings_prayer"
                android:orientation="vertical"
                android:paddingHorizontal="@dimen/_12sdp"
                android:paddingVertical="@dimen/_8sdp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/ln_view_alarm">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginVertical="@dimen/_10sdp">

                    <LinearLayout
                        android:layout_toStartOf="@id/sw_silent_mode"
                        android:layout_alignParentStart="true"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/lato_700"
                            android:text="@string/slient_mode"
                            android:textColor="@color/white"
                            android:textSize="@dimen/_12ssp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/_4sdp"
                            android:fontFamily="@font/lato_400"
                            android:text="@string/automatic"
                            android:textColor="#99D5FF"
                            android:textSize="@dimen/_10ssp" />
                    </LinearLayout>


                    <androidx.appcompat.widget.SwitchCompat
                        android:id="@+id/sw_silent_mode"
                        android:layout_width="wrap_content"
                        android:layout_height="48dp"
                        android:layout_alignParentEnd="true"
                        android:checked="false"
                        android:thumb="@drawable/custom_thumb"
                        app:track="@drawable/custom_track" />
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/rl_slient_mode"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:layout_marginVertical="@dimen/_15sdp"
                    android:visibility="visible">

                    <TextView
                        android:id="@+id/tv_time_start"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_centerVertical="true"
                        android:layout_marginEnd="@dimen/_5sdp"
                        android:layout_toStartOf="@id/tv_am_start"
                        android:fontFamily="@font/lato_400"
                        android:gravity="center"
                        android:text="05:06"
                        android:textColor="@color/white"
                        android:textSize="@dimen/_20ssp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/tv_am_start"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignBottom="@id/tv_time_start"
                        android:layout_marginEnd="@dimen/_10sdp"
                        android:layout_toStartOf="@id/view"
                        android:fontFamily="@font/lato_400"
                        android:text="AM"
                        android:textColor="@color/white"
                        android:textSize="@dimen/_10ssp" />

                    <ImageView
                        android:id="@+id/view"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:fontFamily="@font/lato_700"
                        android:src="@drawable/ic_space_d" />

                    <TextView
                        android:id="@+id/tv_am_end"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignBottom="@id/tv_time_end"
                        android:layout_centerVertical="true"
                        android:layout_toEndOf="@id/tv_time_end"
                        android:fontFamily="@font/lato_400"
                        android:text="AM"
                        android:textColor="@color/white"
                        android:textSize="@dimen/_10ssp" />

                    <TextView
                        android:id="@+id/tv_time_end"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_centerVertical="true"
                        android:layout_marginStart="@dimen/_10sdp"
                        android:layout_marginEnd="@dimen/_5sdp"
                        android:layout_toEndOf="@+id/view"
                        android:fontFamily="@font/lato_400"
                        android:gravity="center"
                        android:text="05:26"
                        android:textColor="@color/white"
                        android:textSize="@dimen/_20ssp"
                        android:textStyle="bold" />
                </RelativeLayout>
            </LinearLayout>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.core.widget.NestedScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>